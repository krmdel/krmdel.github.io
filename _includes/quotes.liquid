<div class="quotes">
  {% if site.quotes != blank %}
    {% assign quotes_size = site.quotes | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.quotes.scrollable and quotes_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign quotes = site.quotes | reverse %}
        {% if include.limit and page.quotes.limit %}
          {% assign quotes_limit = page.quotes.limit %}
        {% else %}
          {% assign quotes_limit = quotes_size %}
        {% endif %}
        {% for item in quotes limit: quotes_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                <blockquote class="blockquote">
                  {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                </blockquote>
              {% else %}
                <a class="quote-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No quotes yet...</p>
  {% endif %}
</div>

